{
  "name": "nextrole",
  "version": "2.0.0",
  "description": "NextRole - Find Your Next Role. Professional career management platform with subscriptions.",
  "main": "app.html",
  "scripts": {
    "test": "cypress run",
    "test:open": "cypress open",
    "test:headless": "cypress run --headless",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:screenshots": "cypress run --spec '**/screenshots/**'",
    "test:visual": "cypress run --spec '**/visual-regression/**'",
    "serve": "python -m http.server 3000",
    "serve:bg": "bash scripts/start-server.sh",
    "test:ci": "npm run serve:bg && sleep 2 && npm run test:headless",
    "test:report": "npm run test:headless && npm run report:merge && npm run report:generate && npm run report:open",
    "test:report:single": "npx cypress run --spec \"cypress/e2e/basic-ui.cy.js\" --headless && npm run report:merge && npm run report:generate && npm run report:open",
    "report:merge": "mochawesome-merge cypress/reports/*.json > cypress/reports/merged-report.json",
    "report:generate": "marge cypress/reports/merged-report.json --reportDir cypress/reports/html --inline",
    "report:open": "echo 'HTML Report available at: https://cdr2.com/job-tool/cypress/reports/html/merged-report.html'",
    "pretest": "npm run serve:bg && sleep 2",
    "posttest": "bash scripts/stop-server.sh || true",
    "clean:reports": "rm -rf cypress/reports cypress/screenshots cypress/videos",
    "test:verify": "echo 'Run: npm run serve:bg && npm run test:open' to verify tests manually",
    "cap:build": "bash scripts/build-capacitor.sh",
    "cap:sync": "npm run cap:build && npx cap sync",
    "cap:ios": "npx cap open ios",
    "cap:android": "npx cap open android",
    "cap:run:ios": "npm run cap:sync && npx cap run ios",
    "cap:run:android": "npm run cap:sync && npx cap run android",
    "resume:pdf": "node yaml-to-pdf.js",
    "resume:example": "node yaml-to-pdf.js resume-example.yaml example-resume.pdf",
    "resume:modern": "node yaml-to-pdf.js resume.yaml resume-modern.pdf modern",
    "resume:classic": "node yaml-to-pdf.js resume.yaml resume-classic.pdf classic",
    "resume:minimal": "node yaml-to-pdf.js resume.yaml resume-minimal.pdf minimal"
  },
  "devDependencies": {
    "cypress": "^13.6.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "wait-on": "^7.2.0"
  },
  "keywords": [
    "job-search",
    "career-management",
    "resume-builder",
    "ai-integration",
    "web-components",
    "modular-architecture"
  ],
  "author": "NextRole Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisrobison/nextrole.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "cypress": {
    "baseUrl": "http://localhost:3000",
    "viewportWidth": 1280,
    "viewportHeight": 720,
    "screenshotOnRunFailure": true,
    "video": true,
    "videoCompression": 32,
    "defaultCommandTimeout": 10000,
    "requestTimeout": 15000,
    "responseTimeout": 15000,
    "pageLoadTimeout": 30000,
    "watchForFileChanges": false,
    "chromeWebSecurity": false
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "puppeteer": "^24.31.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mysql2": "^3.6.5",
    "stripe": "^14.8.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-github2": "^0.1.12",
    "passport-linkedin-oauth2": "^2.0.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7"
  },
  "directories": {
    "test": "tests"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/chrisrobison/nextrole/issues"
  },
  "homepage": "https://github.com/chrisrobison/nextrole#readme"
}
