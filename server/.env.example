# ============================================================
# NextRole Server Configuration
# ============================================================

# Environment
NODE_ENV=development
PORT=3000
HTTPS_PORT=3443

# Enable Monetization Features (set to 'true' to enable)
USE_MONETIZATION=true

# ============================================================
# Database Configuration (MySQL)
# ============================================================

MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=jobtool

# ============================================================
# JWT Authentication
# ============================================================

JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# ============================================================
# Stripe Payment Processing
# ============================================================

STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create products in Stripe Dashboard first)
STRIPE_PRICE_PRO_MONTHLY=price_your_pro_monthly_id
STRIPE_PRICE_PRO_YEARLY=price_your_pro_yearly_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_your_enterprise_monthly_id
STRIPE_PRICE_ENTERPRISE_YEARLY=price_your_enterprise_yearly_id

# ============================================================
# Application URLs
# ============================================================

APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# ============================================================
# Email Service (NodeMailer)
# ============================================================

# SMTP Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# SendGrid (Alternative)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Email Settings
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=NextRole

# ============================================================
# OAuth Providers (Optional)
# ============================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/oauth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/oauth/github/callback

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=http://localhost:3000/api/oauth/linkedin/callback

# ============================================================
# Error Tracking (Optional)
# ============================================================

# Sentry DSN for error monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================
# Feature Flags
# ============================================================

# Enable specific features
ENABLE_OAUTH=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_STRIPE_PAYMENTS=true

# ============================================================
# Security Settings
# ============================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=604800000

# ============================================================
# Development Settings
# ============================================================

# Debug mode
DEBUG=false
LOG_LEVEL=info

# Test mode (bypasses some checks)
TEST_MODE=false
